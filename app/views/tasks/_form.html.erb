<%=form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%=f.label :status, 'status'%>
  <%=f.text_field :status%>
  
  <%=f.label :content,'タスク'%>
  <%=f.text_field :content%>
  
  <%=f.submit '追加'%>
<% end %>